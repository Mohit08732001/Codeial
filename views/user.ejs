<link rel="stylesheet" href="/css/user_profile.css">
<h1>User/Profile</h1>


<% if(user.id==profile_user.id) {%>
    <form action="/users/update/<%= profile_user.id%>" method="post">
    <input type="text" name="name" placeholder="Name" required value="<%= profile_user.name%>">
    <input type="email" name="email" placeholder="Email" required value="<%= profile_user.email%>"> 
    <button type="submit">Update</button>    
</form>


<%} else {%>    
    <p><%= profile_user.name%></p>
    <p><%= profile_user.email%></p>
<%}%>    