<h1><%= title%></h1>
<section id="new-post">
    <% if(locals.user) {%>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" cols="30" rows="3" placeholder="Type Here...." required></textarea>
        <button type="submit">POST</button>
     </form>
     <%}%>
     <div id="post-list-container">
         <ul>
             <% for(post of posts) {%>
              <li><%= post.content %>  </li>
              <!-- <br> -->
              <p>
                  <small>
                  <%= post.user.name%>
                </small>
              </p>
              <%}%>
         </ul>
     </div>
</section>